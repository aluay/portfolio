---
import "../styles/global.css";
import SEO from "../components/SEO.astro";

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	noindex?: boolean;
	keywords?: string[];
}

const { 
	title = "Abdullah Luay â€” Creative Web Developer",
	description,
	image,
	canonical,
	noindex,
	keywords
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Component -->
		<SEO 
			title={title}
			description={description}
			image={image}
			canonical={canonical}
			noindex={noindex}
			keywords={keywords}
		/>
		
		<!-- Favicon and Icons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.json" />
		
		<!-- Preload Critical Resources -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&family=JetBrains+Mono:wght@100;200;300;400;500;600;700;800&display=swap" as="style" />
		
		<!-- DNS Prefetch for External Resources -->
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
		<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
		
		<!-- Font Loading -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&family=JetBrains+Mono:wght@100;200;300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
	</head>	<body>
		<!-- Skip to main content link for accessibility -->
		<a href="#main-content" class="skip-to-main">Skip to main content</a>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	/* Skip to main content link for accessibility */
	.skip-to-main {
		position: absolute;
		top: -100px;
		left: 10px;
		padding: 10px 15px;
		background: #000;
		color: #fff;
		text-decoration: none;
		border-radius: 4px;
		z-index: 1000;
		transition: top 0.3s;
	}
	
	.skip-to-main:focus {
		top: 10px;
	}
</style>
