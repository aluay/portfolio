---
interface Props {
	currentPage?: string;
}

const { currentPage = "" } = Astro.props;
---

<nav class="navbar">
	<div class="container">
		<div class="nav-content">
			<a href="/" class="logo" aria-label="Home">
				<span class="logo-text">AL</span>
			</a>
			<div class="nav-links">
				<a
					href="/"
					class={`nav-link ${currentPage === "home" ? "active" : ""}`}
				>
					Home
				</a>
				<a
					href="/visuals"
					class={`nav-link ${currentPage === "visuals" ? "active" : ""}`}
				>
					Visuals
				</a>
			</div>
		</div>
	</div>
</nav>

<style>
	.navbar {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 100;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(12px);
		transition: var(--transition);
	}

	.nav-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: var(--spacing-md) 0;
	}

	.logo {
		text-decoration: none;
		color: var(--text-primary);
		transition: var(--transition);
	}

	.logo:hover {
		color: var(--primary);
	}

	.logo-text {
		font-size: 1.5rem;
		font-variation-settings:
			"wght" 500,
			"opsz" 72;
		letter-spacing: -0.02em;
	}

	.nav-links {
		display: flex;
		gap: var(--spacing-lg);
	}

	.nav-link {
		color: var(--text-secondary);
		text-decoration: none;
		font-weight: 400;
		font-size: var(--spacing-md);
		transition: var(--transition);
		padding: var(--spacing-sm) var(--spacing-md);
		border-radius: 6px;
	}

	.nav-link:hover {
		color: var(--text-primary);
		background: var(--surface);
	}

	.nav-link.active {
		color: var(--primary);
		background: var(--surface);
	}

	/* Add padding to body to account for fixed navbar */
	:global(body) {
		padding-top: 80px;
	}

	@media (max-width: 768px) {
		.nav-content {
			padding: var(--spacing-sm) 0;
		}

		.logo-text {
			font-size: 1.25rem;
		}

		.nav-link {
			font-size: 0.9rem;
			padding: var(--spacing-xs) var(--spacing-sm);
		}

		:global(body) {
			padding-top: 70px;
		}
	}
</style>
