---
export interface Props {
	title?: string;
	description?: string;
	image?: string;
	url?: string;
	type?: string;
	twitterCard?: string;
	canonical?: string;
	noindex?: boolean;
	keywords?: string[];
	author?: string;
}

const {
	title = "Abdullah Luay â€” Creative Web Developer",
	description = "Portfolio of Abdullah Luay, a web developer based in Portland, OR. Specializing in crafting digital interfaces with precision, elegance, and attention to detail. Experienced in React, Next.js, TypeScript, and modern web technologies.",
	image = "/favicon.svg",
	url = Astro.url.href,
	type = "website",
	twitterCard = "summary_large_image",
	canonical = Astro.url.href,
	noindex = false,
	keywords = [
		"web developer",
		"frontend developer",
		"React developer",
		"Next.js",
		"TypeScript",
		"Portland developer",
		"UI/UX",
		"creative developer",
		"portfolio",
	],
	author = "Abdullah Luay",
} = Astro.props;

// Construct full image URL if relative
const fullImageUrl = image.startsWith("http")
	? image
	: new URL(image, Astro.site || Astro.url.origin).href;
---

<!-- Essential Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(", ")} />
<meta name="author" content={author} />
<meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:site_name" content="Abdullah Luay Portfolio" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:url" content={url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:creator" content="@abdullahluay" />

<!-- Additional SEO Meta Tags -->
<meta name="theme-color" content="#000000" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta
	name="apple-mobile-web-app-status-bar-style"
	content="black-translucent"
/>
<meta name="apple-mobile-web-app-title" content="Abdullah Luay" />

<!-- Structured Data for Person -->
<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "Person",
		"name": "Abdullah Luay",
		"jobTitle": "Web Developer",
		"description": "Creative web developer specializing in modern frontend technologies",
		"url": "{url}",
		"image": "{fullImageUrl}",
		"address": {
			"@type": "PostalAddress",
			"addressLocality": "Portland",
			"addressRegion": "OR",
			"addressCountry": "US"
		},
		"knowsAbout": [
			"React",
			"Next.js",
			"TypeScript",
			"JavaScript",
			"Python",
			"Web Development",
			"UI/UX Design"
		],
		"alumniOf": {
			"@type": "Organization",
			"name": "Human-Computer Interaction Studies"
		},
		"sameAs": [
			"https://github.com/abdullahluay",
			"https://linkedin.com/in/abdullahluay",
			"https://twitter.com/abdullahluay"
		]
	}
</script>

<!-- Structured Data for Website -->
<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "WebSite",
		"name": "Abdullah Luay Portfolio",
		"description": "{description}",
		"url": "{url}",
		"author": {
			"@type": "Person",
			"name": "Abdullah Luay"
		},
		"inLanguage": "en-US"
	}
</script>

<!-- Structured Data for Portfolio/CreativeWork -->
<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "CreativeWork",
		"name": "Abdullah Luay Portfolio",
		"description": "A collection of web development projects and skills",
		"creator": {
			"@type": "Person",
			"name": "Abdullah Luay"
		},
		"about": [
			"Web Development",
			"Frontend Development",
			"React",
			"Next.js",
			"TypeScript"
		],
		"url": "{url}"
	}
</script>
